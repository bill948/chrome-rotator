{
  "manifest_version": 3,
  "name": "Kiosk Tab Rotator",
  "version": "1.0",
  "description": "Rotates tabs with activity detection and fullscreen mode.",
  "permissions": ["tabs", "storage", "idle", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}